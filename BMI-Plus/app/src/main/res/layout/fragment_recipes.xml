<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.recipes.RecipesFragment">


    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="232dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.094">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.094"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_recipes1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00C3FF"
                    android:textAlignment="viewStart"
                    android:textColor="@color/purple_200"
                    android:textSize="30sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/details_recipe1"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/material_dynamic_primary70"
                android:padding="2sp"
                android:textAlignment="viewEnd"
                android:textColor="@color/material_dynamic_secondary10"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:ignore="DuplicateIds" />


        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="361dp"
        android:layout_height="232dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.585">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.094"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/name_recipes2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00C3FF"
                    android:textAlignment="viewStart"
                    android:textColor="@color/purple_200"
                    android:textSize="30sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="272dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/details_recipe2"
                android:layout_width="304dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/material_dynamic_primary70"
                android:padding="2sp"
                android:textAlignment="viewEnd"
                android:textColor="@color/material_dynamic_secondary10"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:ignore="DuplicateIds" />


        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/text_recipes123"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.76" />
</androidx.constraintlayout.widget.ConstraintLayout>